@model IdentityServer4.SSO.Models.User.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@section  Styles{ 
    <link href="~/css/profile.css" rel="stylesheet" />
}

<div class="content row profile-container">
    <div class="col-lg-8 col-md-8 col-12">
        <div class="profile-form">
            <h2 class="title">Your profile</h2>
            <form>
                <div class="form-group">
                    <label asp-for="Nickname"></label>
                    <input type="text" asp-for="Nickname" />
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-12">
        <div class="picture-container">
            <h2 class="title">Profile picture</h2>
            <div class="profile-picture">
                <img src="@Model.Avatar" />
                <button type="button"><i class="fa fa-pencil"></i>Edit</button>
            </div>
        </div>
    </div>
</div>

