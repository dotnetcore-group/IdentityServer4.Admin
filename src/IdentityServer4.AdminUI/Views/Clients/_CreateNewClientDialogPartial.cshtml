@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IdentityServer4.AdminUI.Models.Client.CreateClientViewModel

<form class="form-horizontal" method="post" asp-action="Create">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">@Localizer["Add A Client"]</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="ClientId"></label>
            <div class="col-sm-10">
                <input asp-for="ClientId" class="form-control">
                <span asp-validation-for="ClientId"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="ClientName"></label>
            <div class="col-sm-10">
                <input asp-for="ClientName" class="form-control">
                <span asp-validation-for="ClientName"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Description"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="ClientUri"></label>
            <div class="col-sm-10">
                <input asp-for="ClientUri" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="LogoUri"></label>
            <div class="col-sm-10">
                <input asp-for="LogoUri" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <div class="row client-types">
                    @foreach (var clientType in Model?.ClientTypes)
                    {
                        <div class="col-sm-4">
                            <label class="type-item-container">
                                <input asp-for="ClientTypeId" value="@clientType.Id" type="radio" />
                                <span class="type-item">
                                    <span class="type-item-name">@clientType.DisplayName</span>
                                    <span class="type-item-desc">@clientType.Description</span>
                                </span>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer["Cancel"]</button>
        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
    </div>
</form>